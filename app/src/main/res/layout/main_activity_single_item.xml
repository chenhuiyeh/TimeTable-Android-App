<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorAccent"
    android:elevation="4dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="105dp"
            android:id="@+id/ivMain"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMain"
            android:textStyle="bold"
            android:text="time table"
            android:layout_toRightOf="@+id/ivMain"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            android:textSize="24sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDescription"
            android:text="time table"
            android:layout_below="@id/tvMain"
            android:layout_toRightOf="@id/ivMain"
            android:layout_marginStart="10dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvClick"
            android:textSize="12sp"
            android:text="click me"
            android:layout_below="@id/tvDescription"
            android:layout_toLeftOf="@id/ivMain"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/ivMain"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="6dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>

